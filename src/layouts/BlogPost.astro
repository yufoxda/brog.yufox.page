---
import Layout from './Layout.astro';

interface Props {
	frontmatter: {
		title: string;
		date: string;
		description?: string;
		tags?: string[];
	};
	headings: { depth: number; slug: string; text: string }[];
}

const { frontmatter, headings } = Astro.props;
const formattedDate = new Date(frontmatter.date).toLocaleDateString('ja-JP', {
	year: 'numeric',
	month: 'long',
	day: 'numeric'
});

// ÁõÆÊ¨°Áî®„Å´Ë¶ãÂá∫„Åó„Çí„Éï„Ç£„É´„Çø„É™„É≥„Ç∞Ôºàh2„Å®h3„ÅÆ„ÅøÔºâ
const tocHeadings = headings.filter(h => h.depth >= 2 && h.depth <= 3);
---

<Layout title={`${frontmatter.title} | Yufox Blog`}>
	<div class="blog-container">
		<article class="blog-post">
			<header class="post-header">
				<time datetime={frontmatter.date}>{formattedDate}</time>
				<h1>{frontmatter.title}</h1>
				{frontmatter.description && <p class="description">{frontmatter.description}</p>}
				{frontmatter.tags && (
					<div class="tags">
						{frontmatter.tags.map((tag) => (
							<span class="tag">#{tag}</span>
						))}
					</div>
				)}
			</header>
			<div class="post-content">
				<slot />
			</div>
			<footer class="post-footer">
				<a href="/" class="back-link">‚Üê Ë®ò‰∫ã‰∏ÄË¶ß„Å´Êàª„Çã</a>
			</footer>
		</article>
		{tocHeadings.length > 0 && (
			<aside class="sidebar">
				<nav class="table-of-contents">
					<h2>üìñ ÁõÆÊ¨°</h2>
					<ul>
						{tocHeadings.map((heading) => (
							<li class={`toc-level-${heading.depth}`}>
								<a href={`#${heading.slug}`} data-target={heading.slug}>{heading.text}</a>
							</li>
						))}
					</ul>
				</nav>
			</aside>
		)}
	</div>
</Layout>

<script>
	// ÁèæÂú®Ë°®Á§∫‰∏≠„ÅÆ„Çª„ÇØ„Ç∑„Éß„É≥„Çí„Éè„Ç§„É©„Ç§„Éà
	function setupTocHighlight() {
		const tocLinks = document.querySelectorAll('.table-of-contents a');
		const headings = document.querySelectorAll('.post-content h2, .post-content h3');
		
		if (tocLinks.length === 0 || headings.length === 0) return;

		const observer = new IntersectionObserver(
			(entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						const id = entry.target.id;
						tocLinks.forEach((link) => {
							if (link.getAttribute('data-target') === id) {
								link.classList.add('active');
							} else {
								link.classList.remove('active');
							}
						});
					}
				});
			},
			{
				rootMargin: '-100px 0px -66%',
				threshold: 0
			}
		);

		headings.forEach((heading) => {
			observer.observe(heading);
		});
	}

	// „Éö„Éº„Ç∏Ë™≠„ÅøËæº„ÅøÊôÇ„Å´ÂÆüË°å
	setupTocHighlight();

	// „Éö„Éº„Ç∏ÈÅ∑ÁßªÂæå„ÇÇÂÆüË°åÔºàAstro„ÅÆ„Éì„É•„Éº„Éà„É©„É≥„Ç∏„Ç∑„Éß„É≥ÂØæÂøúÔºâ
	document.addEventListener('astro:page-load', setupTocHighlight);
</script>

<style>
	.blog-container {
		display: flex;
		gap: 3rem;
		align-items: flex-start;
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.blog-post {
		flex: 1;
		min-width: 0;
		animation: fadeIn 0.6s ease-out;
	}

	.sidebar {
		width: 300px;
		flex-shrink: 0;
		position: sticky;
		top: 90px;
		align-self: flex-start;
		max-height: calc(100vh - 110px);
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.post-header {
		margin-bottom: 3rem;
		padding-bottom: 2rem;
		border-bottom: 2px solid var(--color-border);
		position: relative;
	}

	.post-header::after {
		content: '';
		position: absolute;
		bottom: -2px;
		left: 0;
		width: 80px;
		height: 2px;
		background: linear-gradient(90deg, var(--color-accent), transparent);
	}

	.post-header time {
		display: inline-block;
		color: var(--color-accent);
		font-size: 0.95rem;
		font-weight: 600;
		margin-bottom: 0.75rem;
		letter-spacing: 0.5px;
		text-transform: uppercase;
	}

	.post-header h1 {
		margin: 0.5rem 0 1rem;
		font-size: 2.5rem;
		line-height: 1.2;
		background: linear-gradient(135deg, var(--color-text) 0%, var(--color-accent) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		font-weight: 800;
	}

	.description {
		font-size: 1.15rem;
		color: var(--color-text-secondary);
		margin-bottom: 1.5rem;
		line-height: 1.6;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	.tag {
		background: linear-gradient(135deg, var(--color-accent-light) 0%, rgba(var(--color-accent-rgb), 0.1) 100%);
		color: var(--color-accent);
		padding: 0.5rem 1rem;
		border-radius: 25px;
		font-size: 0.875rem;
		font-weight: 600;
		transition: all 0.3s ease;
		border: 1px solid rgba(var(--color-accent-rgb), 0.2);
	}

	.tag:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(var(--color-accent-rgb), 0.2);
	}

	.post-content {
		font-size: 1.05rem;
		line-height: 1.8;
	}

	.post-content :global(h2:first-child),
	.post-content :global(h3:first-child) {
		margin-top: 0;
	}

	.post-content :global(h2) {
		margin-top: 3rem;
		margin-bottom: 1rem;
		font-size: 1.75rem;
		font-weight: 700;
		position: relative;
		padding-left: 1.5rem;
	}

	.post-content :global(h2::before) {
		content: '';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 4px;
		height: 70%;
		background: linear-gradient(180deg, var(--color-accent), transparent);
		border-radius: 2px;
	}

	.post-content :global(h3) {
		margin-top: 2rem;
		margin-bottom: 0.75rem;
		font-size: 1.35rem;
		font-weight: 600;
		color: var(--color-text);
	}

	.post-content :global(p) {
		margin-bottom: 1.5rem;
	}

	.post-content :global(a) {
		color: var(--color-accent);
		text-decoration: none;
		border-bottom: 2px solid transparent;
		transition: border-color 0.2s;
	}

	.post-content :global(a:hover) {
		border-bottom-color: var(--color-accent);
	}

	.post-content :global(code) {
		background: var(--color-bg-secondary);
		padding: 0.2em 0.4em;
		border-radius: 4px;
		font-size: 0.9em;
		border: 1px solid var(--color-border);
	}

	.post-content :global(pre) {
		background: var(--color-bg-secondary);
		padding: 1.5rem;
		border-radius: 8px;
		overflow-x: auto;
		border: 1px solid var(--color-border);
		margin: 2rem 0;
	}

	.post-content :global(pre code) {
		background: none;
		padding: 0;
		border: none;
	}

	.table-of-contents {
		background: linear-gradient(135deg, var(--color-bg-secondary) 0%, var(--color-bg) 100%);
		border: 1px solid var(--color-border);
		border-radius: 12px;
		padding: 1.75rem;
		max-height: calc(100vh - 110px);
		overflow-y: auto;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
	}
	
	.table-of-contents::-webkit-scrollbar {
		width: 6px;
	}
	
	.table-of-contents::-webkit-scrollbar-track {
		background: transparent;
		border-radius: 3px;
	}
	
	.table-of-contents::-webkit-scrollbar-thumb {
		background: var(--color-border);
		border-radius: 3px;
	}
	
	.table-of-contents::-webkit-scrollbar-thumb:hover {
		background: var(--color-accent);
	}

	.table-of-contents h2 {
		font-size: 1.1rem;
		margin: 0 0 1.25rem;
		padding: 0;
		border: none;
		color: var(--color-text);
		font-weight: 700;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.table-of-contents ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.table-of-contents li {
		margin: 0;
		padding: 0;
	}

	.table-of-contents a {
		display: block;
		padding: 0.6rem 0 0.6rem 1.25rem;
		color: var(--color-text-secondary);
		text-decoration: none;
		transition: all 0.3s ease;
		border-left: 3px solid transparent;
		font-size: 0.9rem;
		line-height: 1.5;
		border-radius: 0 4px 4px 0;
	}

	.table-of-contents a:hover {
		color: var(--color-accent);
		border-left-color: var(--color-accent);
		background: rgba(var(--color-accent-rgb), 0.05);
		transform: translateX(4px);
	}

	.table-of-contents a.active {
		color: var(--color-accent);
		border-left-color: var(--color-accent);
		background: rgba(var(--color-accent-rgb), 0.1);
		font-weight: 600;
	}

	.toc-level-2 {
		font-weight: 500;
	}

	.toc-level-3 {
		padding-left: 1rem;
		font-size: 0.85rem;
	}

	.toc-level-3 a {
		color: var(--color-text-secondary);
		opacity: 0.8;
		padding-left: 1rem;
	}

	.post-footer {
		margin-top: 4rem;
		padding-top: 2rem;
		border-top: 2px solid var(--color-border);
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-weight: 600;
		color: var(--color-accent);
		transition: all 0.3s ease;
		padding: 0.75rem 1.5rem;
		border-radius: 8px;
		background: rgba(var(--color-accent-rgb), 0.1);
		border: 1px solid rgba(var(--color-accent-rgb), 0.2);
	}

	.back-link:hover {
		transform: translateX(-6px);
		background: rgba(var(--color-accent-rgb), 0.15);
		box-shadow: 0 4px 12px rgba(var(--color-accent-rgb), 0.2);
	}

	@media (max-width: 1024px) {
		.blog-container {
			flex-direction: column;
			padding: 0 1.5rem;
		}

		.sidebar {
			width: 100%;
			order: -1;
			position: static;
		}

		.table-of-contents {
			max-height: 400px;
		}

		.post-header h1 {
			font-size: 2rem;
		}
	}

	@media (max-width: 640px) {
		.blog-container {
			padding: 0 1rem;
		}

		.post-header h1 {
			font-size: 1.75rem;
		}

		.post-content {
			font-size: 1rem;
		}
	}

	:root {
		--color-accent-rgb: 59, 130, 246;
	}

	:global([data-theme="dark"]) {
		--color-accent-rgb: 96, 165, 250;
	}
</style>
