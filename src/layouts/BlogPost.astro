---
import Layout from './Layout.astro';

interface Props {
	frontmatter: {
		title: string;
		date: string;
		description?: string;
		tags?: string[];
	};
	headings: { depth: number; slug: string; text: string }[];
}

const { frontmatter, headings } = Astro.props;
const formattedDate = new Date(frontmatter.date).toLocaleDateString('ja-JP', {
	year: 'numeric',
	month: 'long',
	day: 'numeric'
});

// ÁõÆÊ¨°Áî®„Å´Ë¶ãÂá∫„Åó„Çí„Éï„Ç£„É´„Çø„É™„É≥„Ç∞Ôºàh1‰ª•Èôç„Åô„Åπ„Å¶Ôºâ
const tocHeadings = headings.filter(h => h.depth >= 1);
---

<Layout title={`${frontmatter.title} | Yufox Blog`}>
	<div class="blog-container">
		<article class="blog-post">
			<header class="post-header">
				<time datetime={frontmatter.date}>{formattedDate}</time>
				<h1>{frontmatter.title}</h1>
				{frontmatter.description && <p class="description">{frontmatter.description}</p>}
				{frontmatter.tags && (
					<div class="tags">
						{frontmatter.tags.map((tag) => (
							<span class="tag">#{tag}</span>
						))}
					</div>
				)}
			</header>
			<div class="post-content">
				<slot />
			</div>
			<footer class="post-footer">
				<a href="/" class="back-link">‚Üê Ë®ò‰∫ã‰∏ÄË¶ß„Å´Êàª„Çã</a>
			</footer>
		</article>
		{tocHeadings.length > 0 && (
			<aside class="sidebar">
				<nav class="table-of-contents">
					<h2>üìñ ÁõÆÊ¨°</h2>
					<ul>
						{tocHeadings.map((heading) => (
							<li class={`toc-level-${heading.depth}`}>
								<a href={`#${heading.slug}`} data-target={heading.slug}>{heading.text}</a>
							</li>
						))}
					</ul>
				</nav>
			</aside>
		)}
	</div>
</Layout>

<script>
	// ÁèæÂú®Ë°®Á§∫‰∏≠„ÅÆ„Çª„ÇØ„Ç∑„Éß„É≥„Çí„Éè„Ç§„É©„Ç§„Éà
	function setupTocHighlight() {
		const tocLinks = document.querySelectorAll('.table-of-contents a');
		const headings = document.querySelectorAll('.post-content h1, .post-content h2, .post-content h3, .post-content h4, .post-content h5, .post-content h6');
		
		if (tocLinks.length === 0 || headings.length === 0) return;

		const observer = new IntersectionObserver(
			(entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						const id = entry.target.id;
						tocLinks.forEach((link) => {
							if (link.getAttribute('data-target') === id) {
								link.classList.add('active');
							} else {
								link.classList.remove('active');
							}
						});
					}
				});
			},
			{
				rootMargin: '-100px 0px -66%',
				threshold: 0
			}
		);

		headings.forEach((heading) => {
			observer.observe(heading);
		});
	}

	// „Éö„Éº„Ç∏Ë™≠„ÅøËæº„ÅøÊôÇ„Å´ÂÆüË°å
	setupTocHighlight();

	// „Éö„Éº„Ç∏ÈÅ∑ÁßªÂæå„ÇÇÂÆüË°åÔºàAstro„ÅÆ„Éì„É•„Éº„Éà„É©„É≥„Ç∏„Ç∑„Éß„É≥ÂØæÂøúÔºâ
	document.addEventListener('astro:page-load', setupTocHighlight);
</script>

<style>
	:root {
		--color-accent-rgb: 255, 107, 53;
	}

	.blog-container {
		display: flex;
		gap: 3rem;
		align-items: flex-start;
		max-width: 1400px;
		margin: 0 auto;
		position: relative;
	}

	.blog-post {
		flex: 1;
		min-width: 0;
		max-width: 100%;
		background: var(--color-surface);
		padding: 2.5rem;
		border-radius: var(--radius-lg);
		box-shadow: var(--shadow-sm);
	}

	.sidebar {
		width: 300px;
		flex-shrink: 0;
		position: sticky;
		top: calc(var(--header-height) + 2rem);
		align-self: flex-start;
		max-height: calc(100vh - 120px);
	}

	.post-header {
		margin-bottom: 2rem;
		text-align: left;
	}

	.post-header time {
		display: inline-block;
		color: var(--color-text-muted);
		font-size: 0.9rem;
		font-weight: 500;
		margin-bottom: 0.5rem;
	}

	.post-header h1 {
		margin: 0 0 1rem;
		font-size: 2rem;
		line-height: 1.3;
		color: var(--color-text-main);
		font-weight: 700;
	}

	.description {
		font-size: 1.125rem;
		color: var(--color-text-muted);
		margin-bottom: 1.5rem;
		line-height: 1.6;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}

	.tag {
		background: var(--color-bg);
		color: var(--color-text-muted);
		padding: 0.4rem 0.9rem;
		border-radius: 9999px;
		font-size: 0.875rem;
		font-weight: 500;
		transition: all 0.2s ease;
	}

	.tag:hover {
		color: var(--color-accent);
		background: rgba(var(--color-accent-rgb), 0.1);
	}

	.post-content {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--color-text-main);
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	/* Markdown Content Styling */
	.post-content :global(h1) {
		margin-top: 3.5rem;
		margin-bottom: 1.5rem;
		font-size: 1.8rem;
		font-weight: 700;
		color: var(--color-text-main);
		border-left: 5px solid var(--color-accent);
		padding-left: 1rem;
	}

	.post-content :global(h2) {
		margin-top: 3rem;
		margin-bottom: 1.5rem;
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--color-text-main);
		border-bottom: 1px solid var(--color-border);
		padding-bottom: 0.5rem;
	}

	.post-content :global(h3) {
		margin-top: 2.5rem;
		margin-bottom: 1rem;
		font-size: 1.25rem;
		font-weight: 700;
		color: var(--color-text-main);
	}
	
	.post-content :global(h4) {
		margin-top: 2rem;
		margin-bottom: 0.75rem;
		font-size: 1.1rem;
		font-weight: 700;
		color: var(--color-text-main);
	}
	
	.post-content :global(h5) {
		margin-top: 1.5rem;
		margin-bottom: 0.5rem;
		font-size: 1rem;
		font-weight: 700;
		color: var(--color-text-main);
	}
	
	.post-content :global(h6) {
		margin-top: 1.25rem;
		margin-bottom: 0.5rem;
		font-size: 1rem;
		font-weight: 700;
		color: var(--color-text-muted);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.post-content :global(p) {
		margin-bottom: 1.5rem;
	}

	.post-content :global(ul), .post-content :global(ol) {
		margin-bottom: 1.5rem;
		padding-left: 1.5rem;
	}
	
	.post-content :global(li) {
		margin-bottom: 0.5rem;
	}

	.post-content :global(a) {
		color: var(--color-accent);
		text-decoration: none;
		border-bottom: 1px solid rgba(var(--color-accent-rgb), 0.3);
		transition: border-color 0.2s;
	}

	.post-content :global(a:hover) {
		border-bottom-color: var(--color-accent);
		background: rgba(var(--color-accent-rgb), 0.05);
	}
	
	.post-content :global(blockquote) {
		border-left: 4px solid var(--color-accent);
		margin: 1.5rem 0;
		padding: 1rem 1.5rem;
		background: var(--color-bg);
		border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
		font-style: italic;
		color: var(--color-text-muted);
	}

	.post-content :global(img) {
		max-width: 100%;
		height: auto;
		border-radius: var(--radius-md);
		border: 1px solid var(--color-border);
		margin: 2rem 0;
		display: block;
	}

	.post-content :global(code) {
		font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
		font-size: 0.9em;
		background: rgba(var(--color-accent-rgb), 0.1);
		color: var(--color-accent);
		padding: 0.2em 0.4em;
		border-radius: 4px;
	}

	.post-content :global(pre) {
		background: #1a1a2e;
		padding: 1.5rem;
		border-radius: var(--radius-md);
		overflow-x: auto;
		overflow-y: auto;
		max-width: 100%;
		margin: 2rem 0;
		box-shadow: var(--shadow-sm);
		-webkit-overflow-scrolling: touch;
	}
	
	.post-content :global(pre code) {
		background: transparent;
		color: inherit;
		padding: 0;
	}
	
	.post-content :global(table) {
		width: 100%;
		border-collapse: collapse;
		margin: 2rem 0;
		overflow-x: auto;
		display: block;
	}
	
	.post-content :global(th),
	.post-content :global(td) {
		padding: 0.75rem;
		text-align: left;
		border: 1px solid var(--color-border);
	}
	
	.post-content :global(th) {
		background: var(--color-bg);
		font-weight: 600;
	}
	
	.post-content :global(tr:nth-child(even)) {
		background: rgba(0, 0, 0, 0.02);
	}

	.table-of-contents {
		background: var(--color-surface);
		border-radius: var(--radius-md);
		padding: 1.5rem;
		box-shadow: var(--shadow-sm);
		border: 1px solid var(--color-border);
		max-height: calc(100vh - 140px);
		overflow-y: auto;
	}

	.table-of-contents::-webkit-scrollbar {
		width: 4px;
	}
	
	.table-of-contents::-webkit-scrollbar-track {
		background: transparent;
	}
	
	.table-of-contents::-webkit-scrollbar-thumb {
		background: var(--color-border);
		border-radius: 2px;
	}

	.table-of-contents::-webkit-scrollbar-thumb:hover {
		background: var(--color-text-muted);
	}
	
	.table-of-contents h2 {
		font-size: 1rem;
		margin: 0 0 1rem;
		color: var(--color-text-muted);
		text-transform: uppercase;
		font-weight: 700;
		letter-spacing: 0.05em;
	}

	.table-of-contents ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.table-of-contents a {
		display: block;
		padding: 0.5rem 0;
		color: var(--color-text-muted);
		text-decoration: none;
		transition: all 0.2s;
		font-size: 0.95rem;
		border-left: 2px solid transparent;
		padding-left: 1rem;
		margin-left: -1rem;
	}

	.table-of-contents a:hover,
	.table-of-contents a.active {
		color: var(--color-accent);
		border-left-color: var(--color-accent);
		background: linear-gradient(90deg, rgba(var(--color-accent-rgb), 0.05), transparent);
	}

	.toc-level-1 {
		font-weight: 700;
		font-size: 1em;
	}

	.toc-level-2 {
		font-weight: 500;
		padding-left: 0.5rem;
	}

	.toc-level-3 {
		padding-left: 1.5rem;
		font-size: 0.9em;
	}

	.toc-level-4 {
		padding-left: 2rem;
		font-size: 0.85em;
	}

	.toc-level-5, .toc-level-6 {
		padding-left: 3rem;
		font-size: 0.85em;
	}

	.post-footer {
		margin-top: 4rem;
		padding-top: 2rem;
		border-top: 1px solid var(--color-border);
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		color: var(--color-text-muted);
		font-weight: 500;
		font-size: 0.95rem;
		transition: color 0.2s;
	}

	.back-link:hover {
		color: var(--color-accent);
	}

	@media (max-width: 1024px) {
		.blog-container {
			flex-direction: column;
		}

		.sidebar {
			width: 100%;
			order: -1;
			position: static;
			margin-bottom: 2rem;
		}
		
		.table-of-contents {
			max-height: none;
		}
	}

	@media (max-width: 768px) {
		.blog-post {
			padding: 1.5rem;
		}
		
		.post-header h1 {
			font-size: 1.75rem;
		}
		
		.post-content {
			font-size: 1rem;
		}
		
		.post-content :global(pre) {
			padding: 1rem;
			margin: 1.5rem -0.5rem;
			border-radius: var(--radius-sm);
		}
		
		.post-content :global(h1) {
			font-size: 1.5rem;
		}
		
		.post-content :global(h2) {
			font-size: 1.3rem;
		}
		
		.post-content :global(h3) {
			font-size: 1.15rem;
		}
	}
</style>
