---
interface Props {
	title?: string;
}

const { title = "Yufox Blog" } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<header>
			<nav>
				<a href="/" class="logo">Yufox Blog</a>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<p>Â© 2025 Yufox Blog. All rights reserved.</p>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--color-bg: #fafafa;
		--color-bg-secondary: #ffffff;
		--color-text: #1a1a2e;
		--color-text-secondary: #4a4a68;
		--color-accent: #ff6b35;
		--color-accent-light: #fff0eb;
		--color-border: #e8e8ed;
		--font-sans: 'Inter', 'Noto Sans JP', sans-serif;
		--max-width: 800px;
		--radius: 12px;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: var(--font-sans);
		background: var(--color-bg);
		color: var(--color-text);
		line-height: 1.8;
		scroll-behavior: smooth;
	}

	body {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	a {
		color: var(--color-accent);
		text-decoration: none;
		transition: opacity 0.2s;
	}

	a:hover {
		opacity: 0.8;
	}

	code {
		background: var(--color-accent-light);
		padding: 0.2em 0.4em;
		border-radius: 4px;
		font-size: 0.9em;
		color: var(--color-accent);
	}

	pre {
		background: #1a1a2e !important;
		padding: 1.5rem;
		border-radius: var(--radius);
		overflow-x: auto;
		margin: 1.5rem 0;
	}

	pre code {
		background: none;
		color: #e8e8ed;
		padding: 0;
	}

	img {
		max-width: 100%;
		height: auto;
		border-radius: var(--radius);
	}

	h1, h2, h3, h4 {
		color: var(--color-text);
		line-height: 1.4;
		margin-top: 2rem;
		margin-bottom: 1rem;
	}

	h1 {
		font-size: 2.2rem;
		font-weight: 700;
	}

	h2 {
		font-size: 1.6rem;
		font-weight: 600;
		padding-bottom: 0.5rem;
		border-bottom: 2px solid var(--color-border);
	}

	h3 {
		font-size: 1.3rem;
		font-weight: 600;
	}

	p {
		margin-bottom: 1rem;
		color: var(--color-text-secondary);
	}

	ul, ol {
		margin: 1rem 0;
		padding-left: 1.5rem;
		color: var(--color-text-secondary);
	}

	li {
		margin-bottom: 0.5rem;
	}

	blockquote {
		border-left: 4px solid var(--color-accent);
		padding-left: 1rem;
		margin: 1.5rem 0;
		color: var(--color-text-secondary);
		font-style: italic;
	}

	hr {
		border: none;
		border-top: 1px solid var(--color-border);
		margin: 2rem 0;
	}
</style>

<style>
	header {
		background: var(--color-bg-secondary);
		border-bottom: 1px solid var(--color-border);
		padding: 1rem 2rem;
		position: sticky;
		top: 0;
		z-index: 100;
	}

	nav {
		max-width: var(--max-width);
		margin: 0 auto;
	}

	.logo {
		font-size: 1.3rem;
		font-weight: 700;
		color: var(--color-text);
	}

	.logo:hover {
		color: var(--color-accent);
		opacity: 1;
	}

	main {
		flex: 1;
		max-width: 1280px;
		margin: 0 auto;
		padding: 2rem;
		width: 100%;
	}

	footer {
		background: var(--color-bg-secondary);
		border-top: 1px solid var(--color-border);
		padding: 2rem;
		text-align: center;
	}

	footer p {
		color: var(--color-text-secondary);
		font-size: 0.9rem;
		margin: 0;
	}

	@media (max-width: 640px) {
		main {
			padding: 1.5rem 1rem;
		}

		h1 {
			font-size: 1.8rem;
		}

		h2 {
			font-size: 1.4rem;
		}
	}
</style>
