---
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';

interface Props {
	title?: string;
}

const { title = "Yufox Blog" } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		/* Colors */
		--color-bg: #f8f9fa;
		--color-surface: #ffffff;
		--color-text-main: #2d3748;
		--color-text-muted: #718096;
		--color-accent: #ff6b35; /* Friendly Orange */
		--color-accent-hover: #e85d2b;
		--color-border: #edf2f7;
		
		/* Fonts */
		--font-sans: 'Inter', 'Noto Sans JP', sans-serif;
		
		/* Spacing & Layout */
		--max-width: 960px;
		--header-height: 70px;
		--radius-sm: 8px;
		--radius-md: 12px;
		--radius-lg: 20px;
		
		/* Shadows */
		--shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
		--shadow-md: 0 4px 6px -1px rgba(0,0,0,0.05), 0 2px 4px -1px rgba(0,0,0,0.03);
		--shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.05), 0 4px 6px -2px rgba(0,0,0,0.025);
		--shadow-hover: 0 20px 25px -5px rgba(0,0,0,0.05), 0 10px 10px -5px rgba(0,0,0,0.02);
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: var(--font-sans);
		background: var(--color-bg);
		color: var(--color-text-main);
		line-height: 1.7;
		scroll-behavior: smooth;
		-webkit-font-smoothing: antialiased;
	}

	body {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	main {
		flex: 1;
		width: 100%;
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 2rem 1.5rem;
	}

	a {
		color: inherit;
		text-decoration: none;
		transition: all 0.2s ease;
	}

	h1, h2, h3, h4, h5, h6 {
		color: var(--color-text-main);
		font-weight: 700;
		line-height: 1.3;
	}

	code {
		background: var(--color-border);
		padding: 0.2em 0.4em;
		border-radius: 4px;
		font-size: 0.9em;
		font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
		color: #c026d3;
	}

	pre {
		background: #1a1a2e !important;
		padding: 1.5rem;
		border-radius: var(--radius-md);
		overflow-x: auto;
		margin: 1.5rem 0;
		box-shadow: var(--shadow-md);
	}

	pre code {
		background: none;
		color: #e2e8f0;
		padding: 0;
	}

	img {
		max-width: 100%;
		height: auto;
		border-radius: var(--radius-md);
		display: block;
	}

	/* Utility classes */
	.text-accent { color: var(--color-accent); }
	.text-muted { color: var(--color-text-muted); }
</style>
