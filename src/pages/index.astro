---
import Layout from '../layouts/Layout.astro';

// „Éñ„É≠„Ç∞Ë®ò‰∫ã„ÇíÂèñÂæó
const posts = Object.values(import.meta.glob('./*.md', { eager: true }));

// Êó•‰ªòÈ†Ü„Å´„ÇΩ„Éº„ÉàÔºàÊñ∞„Åó„ÅÑÈ†ÜÔºâ
const sortedPosts = posts
	.filter(post => post.frontmatter?.title)
	.sort((a, b) => {
		const dateA = new Date(a.frontmatter.date || '2025-01-01');
		const dateB = new Date(b.frontmatter.date || '2025-01-01');
		return dateB.getTime() - dateA.getTime();
	});

function formatDate(dateStr: string) {
	return new Date(dateStr).toLocaleDateString('ja-JP', {
		year: 'numeric',
		month: 'short',
		day: 'numeric'
	});
}
---

<Layout title="Yufox Blog - „Éõ„Éº„É†">
	<section class="hero">
		<h1>Yufox Blog</h1>
		<p>„Ç®„É≥„Ç∏„Éã„Ç¢ÂøóÊúõÂ§ßÂ≠¶Áîü„Å´„Çà„Çã„Éñ„É≠„Ç∞„Åß„Åô</p>
	</section>

	<section class="posts-section">
		<h2>üìù ÊúÄÊñ∞„ÅÆË®ò‰∫ã</h2>
		{sortedPosts.length > 0 ? (
			<ul class="posts-list">
				{sortedPosts.map((post) => (
					<li>
						<a href={post.url} class="post-card">
							<div class="post-info">
								<time datetime={post.frontmatter.date}>
									{formatDate(post.frontmatter.date)}
								</time>
								{post.frontmatter.tags && (
									<div class="tags">
										{post.frontmatter.tags.slice(0, 3).map((tag: string) => (
											<span class="tag">#{tag}</span>
										))}
									</div>
								)}
							</div>
							<h3>{post.frontmatter.title}</h3>
							{post.frontmatter.description && (
								<p class="description">{post.frontmatter.description}</p>
							)}
							<span class="read-more">Á∂ö„Åç„ÇíË™≠„ÇÄ ‚Üí</span>
						</a>
					</li>
				))}
			</ul>
		) : (
			<p class="no-posts">„Åæ„Å†Ë®ò‰∫ã„Åå„ÅÇ„Çä„Åæ„Åõ„Çì„ÄÇ</p>
		)}
	</section>
</Layout>

<style>
	.hero {
		text-align: center;
		padding: 3rem 0 4rem;
		margin-bottom: 2rem;
		border-bottom: 1px solid var(--color-border);
	}

	.hero h1 {
		font-size: 2.5rem;
		margin: 0 0 1rem;
		background: linear-gradient(135deg, var(--color-accent), #ff8f65);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hero p {
		font-size: 1.1rem;
		color: var(--color-text-secondary);
		margin: 0;
	}

	.posts-section h2 {
		font-size: 1.4rem;
		margin-bottom: 1.5rem;
		border: none;
		padding: 0;
	}

	.posts-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.post-card {
		display: block;
		background: var(--color-bg-secondary);
		border: 1px solid var(--color-border);
		border-radius: var(--radius);
		padding: 1.5rem;
		transition: all 0.3s ease;
		color: inherit;
	}

	.post-card:hover {
		border-color: var(--color-accent);
		box-shadow: 0 4px 20px rgba(255, 107, 53, 0.1);
		transform: translateY(-2px);
		opacity: 1;
	}

	.post-info {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 0.75rem;
		flex-wrap: wrap;
	}

	.post-info time {
		color: var(--color-accent);
		font-size: 0.85rem;
		font-weight: 500;
	}

	.tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.tag {
		background: var(--color-accent-light);
		color: var(--color-accent);
		padding: 0.2rem 0.6rem;
		border-radius: 12px;
		font-size: 0.75rem;
		font-weight: 500;
	}

	.post-card h3 {
		margin: 0 0 0.5rem;
		font-size: 1.25rem;
		color: var(--color-text);
		line-height: 1.4;
	}

	.post-card .description {
		font-size: 0.95rem;
		color: var(--color-text-secondary);
		margin-bottom: 0.75rem;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.read-more {
		color: var(--color-accent);
		font-size: 0.9rem;
		font-weight: 500;
	}

	.no-posts {
		text-align: center;
		padding: 3rem;
		background: var(--color-bg-secondary);
		border-radius: var(--radius);
		color: var(--color-text-secondary);
	}

	@media (max-width: 640px) {
		.hero {
			padding: 2rem 0 3rem;
		}

		.hero h1 {
			font-size: 2rem;
		}

		.post-card {
			padding: 1.25rem;
		}
	}
</style>
