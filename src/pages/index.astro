---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// „Éñ„É≠„Ç∞Ë®ò‰∫ã„ÇíÂèñÂæó
const posts = await getCollection('posts');

// Êó•‰ªòÈ†Ü„Å´„ÇΩ„Éº„ÉàÔºàÊñ∞„Åó„ÅÑÈ†ÜÔºâ
const sortedPosts = posts
	.filter(post => post.data?.title)
	.sort((a, b) => {
		const dateA = new Date(a.data.launch_date || '2025-01-01');
		const dateB = new Date(b.data.launch_date || '2025-01-01');
		return dateB.getTime() - dateA.getTime();
	});

function formatDate(date: Date | string) {
	const dateObj = date instanceof Date ? date : new Date(date);
	return dateObj.toLocaleDateString('ja-JP', {
		year: 'numeric',
		month: 'short',
		day: 'numeric'
	});
}
---

<Layout title="Yufox Blog - „Éõ„Éº„É†">
	<section class="hero">
		<h1>Yufox Blog</h1>
		<p>„Ç®„É≥„Ç∏„Éã„Ç¢ÂøóÊúõÂ§ßÂ≠¶Áîü„Å´„Çà„Çã„Éñ„É≠„Ç∞„Åß„Åô</p>
	</section>

	<section class="posts-section">
		<h2>üìù ÊúÄÊñ∞„ÅÆË®ò‰∫ã</h2>
		{sortedPosts.length > 0 ? (
			<ul class="posts-list">
				{sortedPosts.map((post) => (
					<li>
						<a href={`/${post.id}`} class="post-card">
							<div class="post-info">
								<time datetime={post.data.launch_date.toISOString()}>
									{formatDate(post.data.launch_date)}
								</time>
								{post.data.tags && post.data.tags.length > 0 && (
									<div class="tags">
										{post.data.tags.slice(0, 3).map((tag: string) => (
											<span class="tag">#{tag}</span>
										))}
									</div>
								)}
							</div>
							<h3>{post.data.title}</h3>
							{post.data.destination && (
								<p class="description">{post.data.destination}</p>
							)}
							<span class="read-more">Á∂ö„Åç„ÇíË™≠„ÇÄ ‚Üí</span>
						</a>
					</li>
				))}
			</ul>
		) : (
			<p class="no-posts">„Åæ„Å†Ë®ò‰∫ã„Åå„ÅÇ„Çä„Åæ„Åõ„Çì„ÄÇ</p>
		)}
	</section>
</Layout>

<style>
	.hero {
		text-align: center;
		padding: 4rem 0 5rem;
		margin-bottom: 2rem;
		position: relative;
	}
	
	.hero::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 4px;
		background: var(--color-accent);
		border-radius: 2px;
	}

	.hero h1 {
		font-size: 2.5rem;
		font-weight: 800;
		margin: 0 0 1rem;
		letter-spacing: -0.02em;
		color: var(--color-text-main);
	}

	.hero p {
		font-size: 1.25rem;
		color: var(--color-text-muted);
		margin: 0;
		max-width: 600px;
		margin: 0 auto;
	}

	.posts-section {
		margin-top: 2rem;
	}

	.posts-section h2 {
		font-size: 1.5rem;
		margin-bottom: 2rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.posts-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
		gap: 2rem;
	}
	
	.posts-list li {
		display: flex;
	}

	.post-card {
		display: flex;
		flex-direction: column;
		background: var(--color-surface);
		padding: 1.75rem;
		border-radius: var(--radius-md);
		box-shadow: var(--shadow-sm);
		border: 1px solid var(--color-border);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		width: 100%;
		text-decoration: none;
		position: relative;
		overflow: hidden;
	}

	.post-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-hover);
		border-color: rgba(255, 107, 53, 0.3);
	}
	
	.post-card::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 4px;
		background: var(--color-accent);
		transform: scaleX(0);
		transform-origin: left;
		transition: transform 0.3s ease;
	}
	
	.post-card:hover::before {
		transform: scaleX(1);
	}

	.post-info {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 0.5rem;
		font-size: 0.85rem;
		color: var(--color-text-muted);
		margin-bottom: 1rem;
	}
	
	time {
		font-variant-numeric: tabular-nums;
	}

	.post-card h3 {
		font-size: 1.25rem;
		margin: 0 0 0.75rem;
		color: var(--color-text-main);
		line-height: 1.4;
		flex: 1;
	}

	.description {
		font-size: 0.95rem;
		color: var(--color-text-muted);
		margin: 0 0 1.5rem;
		line-height: 1.6;
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
	
	.read-more {
		margin-top: auto;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.9rem;
		font-weight: 600;
		color: var(--color-accent);
	}
	
	.post-card:hover .read-more {
		color: var(--color-accent-hover);
	}

	.tags {
		display: flex;
		gap: 0.5rem;
	}

	.tag {
		background: var(--color-bg);
		padding: 0.1rem 0.5rem;
		border-radius: 4px;
		font-size: 0.75rem;
		color: var(--color-text-muted);
	}
	
	.no-posts {
		text-align: center;
		padding: 4rem;
		color: var(--color-text-muted);
		background: var(--color-surface);
		border-radius: var(--radius-md);
		border: 1px dashed var(--color-border);
	}

	@media (max-width: 600px) {
		.hero {
			padding: 2rem 0 3rem;
		}

		.hero h1 {
			font-size: 2rem;
		}
		
		.hero p {
			font-size: 1rem;
		}
		
		.posts-list {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}
		
		.post-card {
			padding: 1.5rem;
		}
	}
</style>
